
<% if @user == current_user %>
<ul>
    <div  class = "user">
    <h5>Welcome, <%= @user.username %></h5>
    <li> Username: <%= @user.username %></li>
    <li> Email: <%= @user.email %></li>
    </div>
    <div class = "profile" > <%= link_to "Edit Profile", edit_user_path, class: "btn btn-primary" %> </div>             <%#CAN I USE BUTTON_TO%>
    <div class = "profile" > <%= link_to "Add New Recipe", new_recipe_path, class: "btn btn-primary"%> </div> 
</ul>

<% end %>

<% @user.recipes.each do |r|%>
    <div class="card" style="width: 18rem;">
        <div class="card-body">
          <div class="img-box">
    <% if r.image != nil && r.image != "" %>
        <%= image_tag(r.image, class: "card-img-top") %>
    <% else %>
        <%= image_tag("ricebowl.png", class:"card-img-top") %>
    <% end %>
    </div>
    <h5 class="card-title"><%= r.title %></h5>
    <p class="card-title"><%# raw r.ingredients.gsub(/\r/, '<br/>') %></p>            <%#gsub(/\r/, '<br/>') - converts all the \returns or enters/ to a line break%>
    <p class="card-title"><%# raw r.directions.gsub(/\r/, '<br/>') %></p>
    <p class="card-title"><%# link_to r.user.username, user_path(r.user_id) %></p>   
    <%= link_to "Show", "/recipes/#{r.id}", class: "btn btn-primary" %>

    </div>
</div>

<% end %>