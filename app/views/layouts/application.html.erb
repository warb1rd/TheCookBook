<!DOCTYPE html>
<html>
  <head>
    <title>TheCookbook</title>
    <%= csrf_meta_tags %>
    <link href="https://fonts.googleapis.com/css?family=Averia+Sans+Libre|Bungee+Inline|Kranky|Londrina+Shadow" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body> 
    <%= render "/partials/flash"%>
    <div class="area"></div>
    <nav class="main-menu">
        <ul>
            <li>
                <a href="/">
                <i class="fa fa-home fa-2x"></i>
                <span class="nav-text">HOME</span>
                </a>            
            </li> 
            <!-- <% if logged_in? %> -->
            <!-- <%= link_to "Logout", logout_path, {method: "DELETE"} %>
            <% else %>
            <%= link_to "Login", new_session_path %>
          <% end %> -->
            <% if logged_in? %> 
                <li class="logout">                    
                <%= link_to logout_path(current_user, current_user.id), method: :delete,remote: true do %>
                <i class="fa fa-power-off fa-2x"></i>
                <span class="nav-text">LOG OUT</span>
            <% end %>
                  <!-- <a href="/logout">
                  <i class="fa fa-power-off fa-2x"></i>
                  <span class="nav-text">LOG OUT</span>
                  </a> -->
              </li> 
             
              <li class="has-subnav">
                  <a href="/users/<%= current_user.id %>">
                    <i class="fa fa-user-secret fa-2x"></i>
                  <span class="nav-text">MY PROFILE</span>
                  </a>       
              </li>
              <% else %>
              <li class="has-subnav">
                  <a href="/users/new">
                  <i class="fa fa-list fa-2x"></i>
                  <span class="nav-text">SIGN UP</span>
                  </a>       
              </li>
              <li class="has-subnav">
                  <a href="/sessions/new">
                    <i class="fa fa-sign-in fa-2x"></i>
                  <span class="nav-text">LOG IN</span>
                  </a>       
              </li>
              <% end %>
              <li class="has-subnav">
                    <a href="/pages">
                        <i class="fa fa-users fa-2x"></i>
                        <span class="nav-text">ALL USERS</span>
                    </a>       
                </li>
              </ul>
            <li class="has-subnav">
                <a href="/recipes">
                  <i class="fa fa-flask fa-2x"></i>
                <span class="nav-text">ALL RECIPES</span>
                </a>       
            </li>
          </ul>  
      </nav>

    <div class="search-form">
        <%= form_tag(recipes_path, method: "get") do %>
            <%= text_field_tag :search, params[:search],size:"20x1", placeholder: "Search Recipes" %>
            <%= submit_tag "Search", class: "btn btn-primary", name: nil %>
        <% end %>
    </div>
    
    <div class="container">
    <%= yield %>
    </div>
    
  </body>
</html>
