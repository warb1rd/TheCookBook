<div id = "recipe-new">

    <%= form_for @recipe do |f| %>
        <%= f.text_field :title, placeholder: "Title" %>
        <%= f.text_area :ingredients, size: "25x1", placeholder: "Ingredients" %>
        <%= f.text_field :directions, placeholder: "Directions" %>
        <%= f.text_field :image, placeholder: "Add Image url" %>                <%#upload image from desktop%>   
        <%# radio_button_tag(:private, "Private") %> 
        <%# radio_button_tag(:public, "Public") %>
        <%= f.submit "Submit Recipe" %>
        
    <% end %>
</div>
    