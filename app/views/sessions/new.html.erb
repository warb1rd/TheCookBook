<div class="row">
        <div class="col-md-6 offset-md-3">
          <h1>Log In</h1>
          <%= form_tag sessions_path do %>
            <div class="form-group">
              <%= text_field_tag :username, nil, class: "form-control", placeholder: "Username" %>
            </div>
            <div class="form-group">
              <%= password_field_tag :password, nil, class: 'form-control', placeholder: "Password" %>
            </div>
            <%= submit_tag 'Sign In', class: "btn btn-success" %>
            <%= link_to "Don't have an account?", new_user_path, class: 'btn btn-primary' %>
          <% end %>
        </div>
      </div>